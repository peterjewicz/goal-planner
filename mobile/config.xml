<?xml version='1.0' encoding='utf-8'?>
<widget id="com.totalwebconnections.simpleGoalTracker" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Simple Goals Tracker</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="info@totalwebconnections.com" href="http://totalwebconnections.com">
        Total Web Connections - Winfield Illinois Software Development
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-admobpro" spec="^2.37.2" />
    <plugin name="cordova-plugin-sqlite-2" spec="^1.0.6" />
    <engine name="ios" spec="^4.5.5" />
</widget>
